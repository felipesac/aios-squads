{
  "name": "Process with Validation Failures",
  "description": "Process designed to trigger various validation gate failures",
  "testCases": [
    {
      "id": "2A",
      "gate": "PV_BS_001",
      "type": "Strategic Alignment Failure",
      "discovery": {
        "processName": "Vague Automation Idea",
        "endState": "Things get better somehow",
        "endStateClarity": 0.5,
        "currentPainPoints": [
          "Stuff takes too long"
        ],
        "desiredOutcomes": [
          "Make it faster"
        ]
      },
      "expectedValidation": {
        "passed": false,
        "recommendation": "DEFER",
        "vetoTriggered": false,
        "feedbackContains": [
          "end-state clarity",
          "specific outcomes",
          "measurable goals"
        ]
      }
    },
    {
      "id": "2B",
      "gate": "PV_PA_001",
      "type": "Coherence Scan Failure - Truthfulness",
      "executors": {
        "team": [
          {
            "name": "John Doe",
            "role": "Developer",
            "skills": ["python", "apis"],
            "truthfulness": 0.65,
            "systemAdherence": 0.85,
            "skillMatch": 0.90
          }
        ]
      },
      "expectedValidation": {
        "passed": false,
        "recommendation": "REJECT",
        "vetoTriggered": true,
        "vetoReason": "TRUTHFULNESS_BELOW_THRESHOLD",
        "feedbackContains": [
          "truthfulness score",
          "0.7 minimum",
          "replace executor"
        ]
      }
    },
    {
      "id": "2C",
      "gate": "PV_PM_001",
      "type": "Automation Readiness Failure - Missing Guardrails",
      "workflows": {
        "automationType": "full-automation",
        "riskLevel": "high",
        "guardrails": [],
        "automationReadiness": 0.45
      },
      "expectedValidation": {
        "passed": false,
        "recommendation": "ADD_GUARDRAILS_FIRST",
        "vetoTriggered": true,
        "vetoReason": "HIGH_RISK_WITHOUT_GUARDRAILS",
        "feedbackContains": [
          "guardrails required",
          "high risk",
          "safety measures"
        ]
      }
    },
    {
      "id": "2D",
      "gate": "AXIOMA",
      "type": "Axioma Validation Failure",
      "qa": {
        "processDefinition": "Do some stuff",
        "expectedOutcome": "Results",
        "axioma": {
          "completeness": 0.4,
          "actionOrientation": 0.5,
          "progressIndicators": 0.3,
          "overallScore": 6.5
        }
      },
      "expectedValidation": {
        "passed": false,
        "threshold": 7.0,
        "actualScore": 6.5,
        "violationsCount": 8,
        "feedbackContains": [
          "below minimum",
          "7.0 threshold",
          "specific actions",
          "measurable metrics"
        ]
      }
    },
    {
      "id": "2E",
      "gate": "TASK_ANATOMY",
      "type": "Task Anatomy Failure",
      "clickup": {
        "task": {
          "name": "Setup automation workflow",
          "description": "Configure the automation",
          "customFields": {
            "taskAnatomy": {
              "outcome": "Workflow configured",
              "process": "Use Zapier interface to setup triggers",
              "success": "Workflow executes without errors"
            }
          }
        }
      },
      "expectedValidation": {
        "passed": false,
        "missingFields": ["input"],
        "feedbackContains": [
          "missing 'input' field",
          "Task Anatomy incomplete",
          "required fields"
        ]
      }
    }
  ]
}
